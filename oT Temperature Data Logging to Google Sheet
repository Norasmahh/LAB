#include <OneWire.h>
#include <DallasTemperature.h>
#include <WiFi.h>
#include <HTTPClient.h>

// ===== WiFi credentials =====
const char* ssid = "insert your ssid";
const char* password = "insert your pwd";

// ===== Google Script Web App URL =====
const char* serverName = "https://script.google.com/macros/s/AKfycbxpHob8K1oe9fOX11RDS9unpu3u1cJRhbWHgIlEvQCER1kJqZNaejte7O9sxS7GRL_NSg/exec";

// ===== DS18B20 settings =====
#define ONE_WIRE_BUS 25   // pin data DS18B20 disambung ke GPIO25
OneWire oneWire(ONE_WIRE_BUS);
DallasTemperature sensors(&oneWire);

void setup() {
  Serial.begin(115200);
  delay(1000);
  Serial.println();
  Serial.println("=== DS18B20 Temperature Monitoring ===");

  // Mulakan sensor
  sensors.begin();

  // Sambung ke WiFi
  Serial.print("Menyambung ke WiFi: ");
  Serial.println(ssid);
  WiFi.begin(ssid, password);

  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }

  Serial.println("\nWiFi berjaya disambung!");
  Serial.print("Alamat IP: ");
  Serial.println(WiFi.localIP());
}

void loop() {
  // Baca suhu dari DS18B20
  sensors.requestTemperatures();
  float temperature = sensors.getTempCByIndex(0);

  Serial.println("----------------------------------");
  Serial.print("Suhu Semasa: ");
  Serial.print(temperature);
  Serial.println(" °C");

  // === Hantar ke Google Sheet ===
  if (WiFi.status() == WL_CONNECTED) {
    HTTPClient http;
    String url = String(serverName) + "?suhu=" + String(temperature);
    http.begin(url);
    int httpCode = http.GET();

    if (httpCode > 0) {
      Serial.println("✔ Data berjaya dihantar ke Google Sheet!");
      Serial.print("Respon: ");
      Serial.println(http.getString());
    } else {
      Serial.println("❌ Ralat menghantar data ke Google Sheet!");
    }
    http.end();
  } else {
    Serial.println("⚠ WiFi terputus! Cuba sambung semula...");
    WiFi.begin(ssid, password);
  }

  delay(10000); // Hantar setiap 10 saat
}

