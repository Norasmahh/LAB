#include <WiFi.h>
#include <HTTPClient.h>
#include <OneWire.h>
#include <DallasTemperature.h>
#include <MQTT.h>

// ========================
// WiFi Settings
// ========================
const char* ssid = "xxxx";             // <-- Tukar kepada nama WiFi anda
const char* password = "yyyy";      // <-- Kata laluan WiFi

// ========================
// Google Script URL
// ========================
const char* serverName = "https://script.google.com/macros/s/AKfycbxpHob8K1oe9fOX11RDS9unpu3u1cJRhbWHgIlEvQCER1kJqZNaejte7O9sxS7GRL_NSg/exec"; // copy code google sheet

// ========================
// DS18B20 Setup
// ========================
#define ONE_WIRE_BUS 25   // pin data DS18B20
OneWire oneWire(ONE_WIRE_BUS);
DallasTemperature sensors(&oneWire);

// ========================
// MQTT Broker Setup
// ========================
#define CLIENT_ID     "asmah_esp32"
#define MQTT_BROKER   "broker.emqx.io"
#define MQTT_TOPIC    "asmah/suhu"

WiFiClient net;
MQTTClient client;

// ========================
// MQTT Connection Function
// ========================
void connectMQTT() {
  Serial.print("Menyambung ke MQTT broker...");
  while (!client.connect(CLIENT_ID)) {
    Serial.print(".");
    delay(1000);
  }
  Serial.println("\n✔ MQTT connected!");
}

// ========================
// Setup
// ========================
void setup() {
  Serial.begin(115200);
  delay(1000);
  Serial.println("\n=== IoT Temperature Monitoring (Google Sheet + MQTT) ===");

  // Mulakan sensor
  sensors.begin();

  // Sambung ke WiFi
  Serial.print("Menyambung ke WiFi: ");
  Serial.println(ssid);
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("\n✔ WiFi berjaya disambung!");
  Serial.print("Alamat IP: ");
  Serial.println(WiFi.localIP());

  // Sambung MQTT broker
  client.begin(MQTT_BROKER, net);
  connectMQTT();
}

// ========================
// Main Loop
// ========================
void loop() {
  client.loop();
  if (!client.connected()) {
    connectMQTT();
  }

  // Baca suhu dari DS18B20
  sensors.requestTemperatures();
  float temperature = sensors.getTempCByIndex(0);

  // Papar dalam Serial Monitor
  Serial.println("----------------------------------");
  Serial.print("Suhu Semasa: ");
  Serial.print(temperature);
  Serial.println(" °C");

  // === Hantar ke Google Sheet ===
  if (WiFi.status() == WL_CONNECTED) {
    HTTPClient http;
    String url = String(serverName) + "?suhu=" + String(temperature);
    http.begin(url);
    int httpCode = http.GET();

    if (httpCode > 0) {
      Serial.println("✔ Data berjaya dihantar ke Google Sheet!");
    } else {
      Serial.println("❌ Ralat menghantar data ke Google Sheet!");
    }
    http.end();
  }

  // === Hantar ke MQTT Broker ===
  if (client.connected()) {
    client.publish(MQTT_TOPIC, String(temperature));
    Serial.print("✔ Suhu dihantar ke MQTT topic: ");
    Serial.println(MQTT_TOPIC);
  }

  delay(10000); // setiap 10 saat
}


